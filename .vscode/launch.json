{
  "version": "0.2.0",
  "configurations": [{
    "name": "Chrome",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:3000",
    "webRoot": "${workspaceRoot}/src",
    "sourceMapPathOverrides": {
      "webpack:///src/*": "${webRoot}/*"
    }
  }, {
    "name": "Debug CRA Tests",
    "type": "node",
    "request": "launch",
    "runtimeExecutable": "${workspaceRoot}/web-app/node_modules/.bin/react-scripts",
    "runtimeArgs": [
      "--inspect-brk",
      "test"
    ],
    "args": [
      "--runInBand",
      "--no-cache",
      "--env=jsdom"
    ],
    "cwd": "${workspaceRoot}/web-app",
    "protocol": "inspector",
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen"
  }]
}
